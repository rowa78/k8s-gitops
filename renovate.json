{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "enabledManagers": [
    "helmfile",
    "kubernetes",
    "helmv3",
    "ansible"
  ],
  "helmv3": {
    "fileMatch": [
      "(^|/)Chart\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^cluster/.*\\.yaml$"
    ]
  },
  "helmfile": {
    "fileMatch": [
      "^cluster/.*\\.yaml$"
    ]
  },
  "ansible": {
    "fileMatch": [
      "^ansible/.*\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["helmv3", "helmfile", "kubernetes"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchManagers": ["helmv3", "helmfile", "kubernetes"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchManagers": ["ansible"],
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchManagers": ["ansible"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}
