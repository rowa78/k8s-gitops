{
    "dependencyDashboard": true,
    "enabledManagers": ["helmfile", "kubernetes"],

    "kubernetes": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "helmfile": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "regexManagers": [
    {
        "fileMatch": ["(^|/)Chart\\.yaml$"],
        "matchStrings": [
        "name:[ ]*(?<depName>\\S+)[\\s\\S]*?version:[ ]*(?<currentValue>\\S+)"
        ],
        "depNameTemplate": "{{depName}}",
        "datasourceTemplate": "helm"
    }
    ],
    
      "packageRules": [
        {
          "matchManagers": ["regex"],
          "groupName": "Helm Chart Updates",
          "groupSlug": "helm-charts"
        }
      ]
  }