{
    "dependencyDashboard": true,
    "enabledManagers": ["helm", "helmfile", "kubernetes"],

    "helm": {
        "fileMatch": ["(^|/)Chart\\.yaml$"]
    },

    "kubernetes": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "helmfile": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "packageRules": [
        {
        "matchManagers": ["helm"],
        "groupName": "Helm Chart Updates",
        "groupSlug": "helm-charts"
        }
    ]
  }