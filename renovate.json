{
    "dependencyDashboard": true,

    "enabledManagers": ["helmfile", "kubernetes", "helmv3"],

    "helmv3": {
      "fileMatch": ["(^|/)Chart\\.yaml$"]
    },
  
    "kubernetes": {
      "fileMatch": ["^cluster/.*\\.yaml$"]
    },
  
    "helmfile": {
      "fileMatch": ["^cluster/.*\\.yaml$"]
    },
  
    "packageRules": [
        {
          "matchManagers": ["helmv3"],
          "matchPackagePatterns": [".*"],   
          "separateUpdates": true          
        }
      ]

  }