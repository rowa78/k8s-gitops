{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "enabledManagers": [
    "helmfile",
    "kubernetes",
    "helmv3",
    "helm-values"
  ],
  "helmv3": {
    "managerFilePatterns": [
      "/(^|/)Chart\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/^cluster/.*\\.yaml$/"
    ]
  },
  "helmfile": {
    "managerFilePatterns": [
      "/^cluster/.*\\.yaml$/"
    ]
  },
  "ansible": {
    "managerFilePatterns": [
      "/^ansible/.*\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "helmv3",
        "helmfile",
        "kubernetes",
        "helm-values"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchManagers": [
        "helmv3",
        "helmfile",
        "kubernetes",
        "helm-values"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false
    }
  ]
}
