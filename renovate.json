{
    "dependencyDashboard": true,
    "enabledManagers": ["helmfile", "kubernetes"],

    "kubernetes": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "helmfile": {
        "fileMatch": ["^cluster/.*\\.yaml$"]
    },

    "regexManagers": [
        {
          "fileMatch": ["(^|/)Chart\\.yaml$"],
          "matchStrings": [
            "^[ ]{0,2}-[ ]{0,2}name:[ ]*(?<depName>\\S+)[\\s\\S]*?[ ]{0,2}version:[ ]*(?<currentValue>\\S+)"
          ],
          "depNameTemplate": "{{depName}}",
          "datasourceTemplate": "helm"
        }
      ],
    
      "packageRules": [
        {
          "matchManagers": ["regex"],
          "groupName": "Helm Chart Updates",
          "groupSlug": "helm-charts"
        }
      ]
  }