{
    "dependencyDashboard": true,

    "enabledManagers": ["helmfile", "kubernetes", "helmv3"],

    "helmv3": {
      "fileMatch": ["(^|/)Chart\\.yaml$"]
    },
  
    "kubernetes": {
      "fileMatch": ["^cluster/.*\\.yaml$"]
    },
  
    "helmfile": {
      "fileMatch": ["^cluster/.*\\.yaml$"]
    },
  
    "packageRules": [
        {
          "matchManagers": [
            "helmv3",
            "helmfile"
          ],
          "groupName": null,
          "group": {
            "enabled": false
          }
        },
        {
            "matchManagers": [
            "helmv3",
            "helmfile"
            ],
            "matchUpdateTypes": [
            "patch"
            ],
            "automerge": true,
            "automergeType": "branch",
            "automergeComment": "Auto-Merge f√ºr Patch-Version"
        }
        ],
        "recreateClosed": true
  }