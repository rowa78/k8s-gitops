authentik:
  ingress:
    enabled: true
    ingressClassName: nginx
    annotations:
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: &host authentik.auth.devmem.ru
        paths:
          - path: /
            pathType: Prefix
    tls:
      - hosts:
          - *host
        secretName: authentik-tls
  authentik:
    secret_key: ""
    postgresql:
      password: ""
    email:
      host: ""
      port: ""
      username: ""
      password: ""
      use_tls: true
      use_ssl: false
      timeout: 30
      from: ""
  envValueFrom:
    AK_ADMIN_PASS:
      secretKeyRef:
        key: ak-admin-password
        name: authentik
    AK_ADMIN_TOKEN:
      secretKeyRef:
        key: ak-admin-token
        name: authentik
    AUTHENTIK_SECRET_KEY:
      secretKeyRef:
        key: secret-key
        name: authentik
    AUTHENTIK_POSTGRESQL__PASSWORD:
      secretKeyRef:
        key: postgresql-password
        name: authentik
    AUTHENTIK_EMAIL__HOST:
      secretKeyRef:
        key: email-host
        name: authentik
    AUTHENTIK_EMAIL__PORT:
      secretKeyRef:
        key: email-port
        name: authentik
    AUTHENTIK_EMAIL__USERNAME:
      secretKeyRef:
        key: email-username
        name: authentik
    AUTHENTIK_EMAIL__PASSWORD:
      secretKeyRef:
        key: email-password
        name: authentik
    AUTHENTIK_EMAIL__FROM:
      secretKeyRef:
        key: email-username
        name: authentik
  env:
    AUTHENTIK_DEFAULT_USER_CHANGE_NAME: false
    AUTHENTIK_DEFAULT_USER_CHANGE_EMAIL: false
    AUTHENTIK_DEFAULT_USER_CHANGE_USERNAME: false
  postgresql:
    enabled: true
    existingSecret: authentik
    persistence:
      enabled: true
      storageClass: longhorn
      size: 2Gi
  redis:
    enabled: true
    master:
      persistence:
        enabled: true
        storageClass: longhorn
        size: 1Gi
  prometheus:
    serviceMonitor:
      create: true
    rules:
      create: true
  resources:
    server:
      requests:
        cpu: 50m
        memory: 300Mi
      limits:
        cpu: 1000m
        memory: 512Mi
    worker:
      requests:
        cpu: 50m
        memory: 256Mi
      limits:
        cpu: 1000m
        memory: 512Mi
